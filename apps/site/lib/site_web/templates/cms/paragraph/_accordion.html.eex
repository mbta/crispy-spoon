<%= if @content.header do %>
  <%= ContentRewriter.rewrite(@content.header.text, @conn) %>
<% end %>

<%= SiteWeb.PartialView.render("_accordion_ui.html",
  Map.merge(assigns, %{
    multiselectable: false,
    parent_view: SiteWeb.CMS.ParagraphView,
    content_template: "_accordion_content.html",
    sections: @content.sections |> Enum.map(fn section -> Map.from_struct(section) end),
    sticky: true,
    conn: @conn
  })) %>
